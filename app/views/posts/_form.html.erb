<%= form_with(model: post, class: "max-w-2xl mx-auto p-6 bg-white rounded-lg shadow-md") do |form| %>
  <% if post.errors.any? %>
    <div class="bg-red-100 text-red-800 p-4 rounded-lg mb-6">
      <h2 class="font-semibold"><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul class="list-disc pl-5 mt-2">
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :title, class: "block text-lg font-medium text-gray-700" %>
    <%= form.text_field :title, class: "w-full px-4 py-2 mt-1 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
  </div>

  <div class="mb-4">
    <%= form.label :body, class: "block text-lg font-medium text-gray-700" %>
    <%= form.rich_text_area :body, class: "w-full px-4 py-2 mt-1 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
  </div>

  <div class="mb-4">
    <%= form.label :image, class: "block text-lg font-medium text-gray-700" %>
    <%= form.file_field :image, class: "w-full px-4 py-2 mt-1 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
  </div>

  <div class="mt-6">
    <%= form.submit "Save Post", class: "px-4 py-2 bg-blue-600 text-white font-semibold rounded-lg shadow-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50"%>
  </div>
<% end %>
