<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>

  <div class="flex flex-col items-center gap-3 p-4 bg-gray-100 dark:bg-gray-800 rounded-xl shadow-md">
  <strong class="text-gray-700 dark:text-gray-300 text-lg font-semibold">Image:</strong>

  <% if post.image.attached? %>
    <%= image_tag post.image, class: "w-full max-w-sm h-auto rounded-lg shadow-lg transition-transform transform hover:scale-105" %>
  <% end %>
</div>

</div>
