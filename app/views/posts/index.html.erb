<p class="text-green-600"><%= notice %></p>
<% content_for :title, "Posts" %>

<div class="flex justify-between items-center mb-6 mt-6">
  <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Posts</h1>
  <%= link_to "New post", new_post_path, class: "px-4 py-2 bg-blue-600 text-white font-semibold rounded-lg shadow-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50" %>
</div>


<div id="posts">
  <% @posts.each do |post| %>
    <div class="p-4 mb-4 rounded-lg shadow-md bg-white dark:bg-gray-800">
      <%= render post %>
      <div class="mt-4">
        <%= link_to "Show", post, class: "px-4 py-2 bg-blue-600 text-white font-semibold rounded-lg shadow-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50"  %>
      </div>
    </div>
  <% end %>
</div>

