<h2 class="text-3xl font-bold text-center my-6">Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, class: "max-w-2xl mx-auto p-6 bg-white rounded-lg shadow-md") do |f| %>
  <%= render "devise/shared/error_messages", resource: resource, class: "text-red-500 mb-4" %>

  <div class="mb-4">
    <%= f.label :email, class: "block text-lg font-medium text-gray-700" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 mt-1 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="mb-4">
    <%= f.label :password, class: "block text-lg font-medium text-gray-700" %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-4 py-2 mt-1 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
    <% if @minimum_password_length %>
      <br />
      <em class="text-xs text-gray-500">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
  </div>

  <div class="mb-4">
    <%= f.label :password_confirmation, class: "block text-lg font-medium text-gray-700" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-2 mt-1 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
  </div>

  <div class="mb-4">
    <%= f.label :current_password, class: "block text-lg font-medium text-gray-700" %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full px-4 py-2 mt-1 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
  </div>

  <div class="mb-4">
    <%= f.label :username, class: "block text-lg font-medium text-gray-700" %><br />
    <%= f.text_field :username, class: "w-full px-4 py-2 mt-1 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
  </div>

  <div class="mb-4">
    <%= f.label :profile_pic, class: "block text-lg font-medium text-gray-700" %><br />
    <%= f.file_field :profile_pic, class: "w-full px-4 py-2 mt-1 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
  </div>

  <div class="actions mb-6 flex justify-center gap-4">
    <%= f.submit "Update", class: "px-4 py-2 bg-blue-600 text-white font-semibold rounded-lg shadow-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50" %>
  </div>
<% end %>

<h3 class="text-xl font-semibold text-center my-6">Cancel my account</h3>

<div class="text-center">
  Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "px-4 py-2 bg-red-600 text-white font-semibold rounded-lg shadow-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-opacity-50" %>
</div>

<%= link_to "Back", :back, class: "text-blue-600 hover:underline mt-6 block text-center" %>
