<h2 class="text-3xl font-bold text-center my-6">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "max-w-2xl mx-auto p-6 bg-white rounded-lg shadow-md") do |f| %>
  <%= render "devise/shared/error_messages", resource: resource, class: "text-red-500 mb-4" %>

  <div class="mb-4">
    <%= f.label :name, class: "block text-lg font-medium text-gray-700" %><br />
    <%= f.text_field :nombre, class: "w-full px-4 py-2 mt-1 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
  </div>

  <div class="mb-4">
    <%= f.label :last_name, class: "block text-lg font-medium text-gray-700" %><br />
    <%= f.text_field :apellido, class: "w-full px-4 py-2 mt-1 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
  </div>

  <div class="mb-4">
    <%= f.label :username, class: "block text-lg font-medium text-gray-700" %><br />
    <%= f.text_field :username, class: "w-full px-4 py-2 mt-1 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
  </div>

  <div class="mb-4">
    <%= f.label :email, class: "block text-lg font-medium text-gray-700" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 mt-1 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
  </div>

  <div class="mb-4">
    <%= f.label :password, class: "block text-lg font-medium text-gray-700" %>
    <% if @minimum_password_length %>
      <em class="text-xs text-gray-500">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-4 py-2 mt-1 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"%>
  </div>

  <div class="mb-4">
    <%= f.label :password_confirmation, class: "block text-lg font-medium text-gray-700" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-2 mt-1 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
  </div>


  <div class="mb-4">
    <%= f.label :profile_pic, class: "block text-lg font-medium text-gray-700" %><br />
    <%= f.file_field :profile_pic, class: "w-full px-4 py-2 mt-1 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
  </div>

  <div class="mb-6 flex justify-center gap-4">
    <%= f.submit "Sign up", class: "px-4 py-2 bg-blue-600 text-white font-semibold rounded-lg shadow-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50 " %>
    <%= link_to "Log in", new_session_path(resource_name), class: "px-4 py-2 bg-blue-600 text-white font-semibold rounded-lg shadow-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50" %><br />
  </div>
<% end %>



