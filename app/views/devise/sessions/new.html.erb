<h2 class="text-3xl font-bold text-center my-6">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "max-w-2xl mx-auto p-6 bg-white rounded-lg shadow-md mb-6") do |f| %>
  <%= render "devise/shared/error_messages", resource: resource, class: "text-red-500 mb-4" %>

  <div class="mb-4">
    <%= f.label :email, class: "block text-lg font-medium text-gray-700" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 mt-1 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
  </div>

  <div class="mb-4">
    <%= f.label :password, class: "block text-lg font-medium text-gray-700" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-4 py-2 mt-1 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="mb-4">
      <%= f.check_box :remember_me, class: "form-checkbox" %>
      <%= f.label :remember_me, class: "text-sm text-gray-700" %>
    </div>
  <% end %>

  <div class="mb-6 flex justify-center gap-4">
    <%= f.submit "Log in", class: "px-4 py-2 bg-blue-600 text-white font-semibold rounded-lg shadow-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50 " %>
    <%= link_to "Sign up", new_registration_path(resource_name), class: "px-4 py-2 bg-blue-600 text-white font-semibold rounded-lg shadow-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50" %><br />
  </div>
<% end %>
 <%= link_to "Forgot your password?", new_password_path(resource_name) %>

