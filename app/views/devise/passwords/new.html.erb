<h2 class="text-3xl font-bold text-center my-6">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, class: "max-w-2xl mx-auto p-6 bg-white rounded-lg shadow-md mb-6") do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, class: "block text-lg font-medium text-gray-700" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 mt-1 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
  </div>

  <div class="actions mt-6 mb-6">
    <%= f.submit "Send me reset password instructions" %>
  </div>
<% end %>

<div class="flex justify-center gap-4">
  <%= link_to "Log in", new_session_path(resource_name), class: "px-4 py-2 bg-blue-600 text-white font-semibold rounded-lg shadow-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50" %><br />
  <%= link_to "Sign up", new_registration_path(resource_name), class: "px-4 py-2 bg-blue-600 text-white font-semibold rounded-lg shadow-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50" %><br />
</div>

<%= render "devise/shared/links" %>
